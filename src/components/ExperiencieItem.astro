---
import StackList from './StackList.astro';

interface Props{
    title: string,
    description: string,
    date: string,
    current: boolean,
    stack: string[];
    link?: string;
    prev?: {
        title: string,
        description: string,
        date: string,
    };
}


const { title, description, date, link, current,stack, prev} = Astro.props
---
<span class="absolute flex items-center justify-center w-6 h-6 bg-orange-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-orange-900">
    <svg class="w-2.5 h-2.5 text-orange-800 dark:text-orange-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z"/>
    </svg>
</span>

<h3 class="flex items-center mb-1 text-lg font-semibold text-gray-900 dark:text-white">{title} {current && <span class="hidden md:flex bg-orange-100 text-orange-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-orange-900 dark:text-orange-300 ms-3">Actualidad</span>}</h3>
<time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">Desde {date} {current && <span class="md:hidden bg-orange-100 text-orange-800 text-sm font-medium me-2 px-2.5 py-0.5 rounded dark:bg-orange-900 dark:text-orange-300 ms-3">Actualidad</span>}</time>

<p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400 max-w-[300px] md:max-w-[700px] text-wrap">{description}</p>
{prev && 
        <div class="absolute w-3 h-3 bg-orange-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-orange-900 dark:bg-orange-700"></div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{prev.title}</h3>
        <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{prev.date}</time>
        <p class="text-base font-normal text-gray-500 dark:text-gray-400">{prev.description}</p>
}

<StackList stack={stack}/>

{link && <a href="#" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-orange-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-orange-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"><svg class="w-3.5 h-3.5 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
