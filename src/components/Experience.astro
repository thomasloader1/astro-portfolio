---
import ExperiencieItem from "./ExperiencieItem.astro";
import { EXPERIENCES } from "../data/Experience.ts"
import ShovelIcon from '../icons/Shovel.astro';
import {t} from 'i18next'
---

<h2 class="text-2xl font-semibold mb-6 flex gap-x-2 items-center text-black dark:text-white"> <ShovelIcon class="size-6"/> {t("experience.title")}</h2>
<div class="flex justify-center">
    <ol class="relative border-s border-gray-200 dark:border-gray-700">
        {
            EXPERIENCES.map((experience, i) => (
                <li class={`mb-10 ms-6`}>
                    <ExperiencieItem {...experience} />
                </li>
            ))
        }
    </ol>
</div>
